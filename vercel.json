{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/videos/scrape-url.ts": {
      "maxDuration": 60
    },
    "api/videos/import-from-url.ts": {
      "maxDuration": 60
    },
    "api/**/*.{ts,js}": {
      "maxDuration": 10
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/video/:id",
      "destination": "/api/video/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|LinkedInBot|WhatsApp|Slackbot|TelegramBot|Discordbot|Pinterest).*"
        }
      ]
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}